<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screens.home.tabs.sebha.SebhaFragment"
    android:background="@drawable/main_background"
    >

    <ImageView
        android:id="@+id/head_sebha_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/sebha_logo"
        app:layout_constraintEnd_toEndOf="@id/sebha_logo"
        app:layout_constraintBottom_toBottomOf="@id/sebha_logo"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="45dp"
        android:src="@drawable/head_sebha_logo"
        />

    <ImageView
        android:id="@+id/sebha_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/sebha_logo"
        android:src="@drawable/sebha_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tasbeh_tv"
        android:layout_marginBottom="30dp"

        />

    <TextView
        android:id="@+id/tasbeh_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tasbeh_count"
        style="@style/content_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tasbeh_counter_tv"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/tasbeh_counter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tasbeh_counter_btn"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rectangle_shape"
        android:text="0"
        android:textSize="30sp"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="@color/light_black"

        />
    <Button
        android:id="@+id/tasbeh_counter_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        tools:text="سبحان الله"
        android:textSize="24sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>