<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screens.home.tabs.quraan.QuraanFragment">

  <ImageView
      android:id="@+id/quraan_logo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:contentDescription="@string/quraan_screen_logo"
      android:src="@drawable/quraan_screen_logo"
      app:layout_constraintHeight_percent="0.25"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      />
  <View
      android:id="@+id/horizontal_divider_1"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="@color/orange"
      android:layout_marginTop="12dp"
      app:layout_constraintTop_toBottomOf="@id/quraan_logo"
      />
  <LinearLayout
      android:id="@+id/title_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:weightSum="2"
      app:layout_constraintTop_toBottomOf="@id/horizontal_divider_1"
      >
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/chapter"
        style="@style/titles_style"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/verses"
        style="@style/titles_style"

        />

  </LinearLayout>
  <View
      android:id="@+id/horizontal_divider_2"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="@color/orange"
      android:layout_marginTop="12dp"
      app:layout_constraintTop_toBottomOf="@id/title_container"
      />
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/chapters_rv"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/horizontal_divider_2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:listitem="@layout/item_chapter"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      />
  <View
      android:id="@+id/vertical_divider"
      android:layout_width="2dp"
      android:layout_height="0dp"
      android:background="@color/orange"
      android:layout_marginTop="12dp"
      app:layout_constraintTop_toBottomOf="@id/horizontal_divider_1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />

</androidx.constraintlayout.widget.ConstraintLayout>